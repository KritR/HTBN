<div id= "navbar" class="container-fluid col-xs-12">
  <div class="row" style="padding: 0; margin: 0;">
    <div class=" col-md-5 col-xs-6 logo-container">
      <img src="{{global.navigation_logo}}" alt="logo"></img>
    </div> 
    {{#each global.navigation}}
      {{#if routes}}
      
      <div class=" col-lg-1 hidden-xs hidden-sm hidden-md nav-tab">
        <div class= "hover-div"><span class="nav-link">{{title}}</span></div>
        <div class="sub-tab">
        {{#each routes}}
          <a class="sub-tab-link" href="{{link}}">{{title}}</a>
        {{/each}}
        </div>
      </div>
      {{else}}
      <div class="col-lg-1 hidden-xs hidden-sm hidden-md nav-tab">
       <div class="hover-div"><a class="nav-link" href={{link}}>{{title}}</a></div>
      </div>
      {{/if}}
    {{/each}}
    <div class="col-md-7 col-xs-6 toggle">
      <div id= "menu-icon"><span id= "hamburger-menu" style="cursor: pointer;" class="glyphicon glyphicon-menu-hamburger" onclick="showMenu()"></span></div>
    </div>        
  </div>
</div>
